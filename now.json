{
  "version": 2,
  "build": {
    "env": {
      "IS_ZEIT_NOW_BUILD": "1",
      "FORCE_COLOR": "1"
    }
  },
  "builds": [
    {
      "src": "server/index.js",
      "use": "@now/node-server",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "github": {
    "silent": true
  },
  "routes": [
    {
      "src": "/",
      "dest": "dist/index.html"
    },
    {
      "src": "/server",
      "dest": "server/index.js"
    }
  ],
  "regions": [
    "hkg",
    "tpe",
    "hnd",
    "hkg1",
    "tpe1",
    "hnd1"
  ]
}
