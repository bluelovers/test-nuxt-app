{
  "extends": "@bluelovers/tsconfig/vue/nuxt.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "static",
    ".netlify",
    ".nuxt",
    "node_modules"
  ]
}
